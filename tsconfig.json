{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "baseUrl": "./src",
        "outDir": "public",
        "noImplicitAny": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "experimentalDecorators": true,
        "lib": [
            "es5",
            "dom"
        ]
    },
    "include": [
        "types/**/*",
        "src/app/app.module.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "angularCompilerOptions": {
        "genDir": ".",
        "entryModule": "src/app/app.module.ts#AppModule",
        "debug": "true",
        "mainPath": "src/main.ts"
    }
}